keywords = {Abundance distribution,Biodiversity,Ecophylogenetic diversity,Evenness,Evolutionary history,Jasper Ridge biological preserve,Null models,Shannon Index},
number = {1},
pages = {96--105},
pmid = {19903196},
title = {{Phylogenetic diversity metrics for ecological communities: Integrating species richness, abundance and evolutionary history}},
volume = {13},
year = {2010}
}
