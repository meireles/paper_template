issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {51},
pages = {20627--20632},
pmid = {22106283},
title = {{Functional traits determine trade-offs and niches in a tropical forest community}},
volume = {108},
year = {2011}
}
