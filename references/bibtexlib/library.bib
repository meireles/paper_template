file = {:Users/Meireles/Bibliography/PDFs/M{\"{u}}ller, Reisz - 2006 - Systematic biology.pdf:pdf},
isbn = {1063-5157},
issn = {1063-5157},
journal = {Systematic biology},
keywords = {Animals,Bayes Theorem,Fossils,Phylogeny,Reptiles,Reptiles: classification,Reptiles: genetics},
number = {3},
pages = {503--11},
