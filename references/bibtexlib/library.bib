journal = {Annals of Agricultural and Environmental Medicine},
keywords = {Breast cancer,Cervical cancer,Prophylaxis},
number = {1},
pages = {183--188},
pmid = {21736284},
title = {{Prevention of female reproductive system cancer among rural and urban Polish pregnant women}},
