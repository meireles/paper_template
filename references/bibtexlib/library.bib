file = {:Users/Meireles/Bibliography/PDFs/Ramos et al. - 2007 - Annals of Botany.pdf:pdf},
isbn = {0305-7364},
issn = {03057364},
journal = {Annals of Botany},
keywords = {Biogeography,Cerrado,Fabaceae,Genetic structure,Hymenaea stigonocarpa,Leguminosae,Neotropical savannas,Phylogeography,Pleistocene,Quaternary climate changes,psbC-trnS},
number = {6},
pages = {1219--1228},
