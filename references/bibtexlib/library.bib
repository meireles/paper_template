keywords = {Evolutionary constraint,Genetic variance-covariance matrix,Independent contrasts,Matrix comparison,Phenotypic variance-covariance matrix,Quantitative genetics},
number = {2},
pages = {261--282},
title = {{A phylogenetic approach to determining the importance of constraint on phenotypic evolution in the neotropical lizard Anolis cristatellus}},
volume = {9},
year = {2007}
