journal = {Tree Physiology},
keywords = {Carbon balance,Climate change,Development,Global warming,Thermal acclimation},
number = {6},
pages = {669--688},
pmid = {20368338},
title = {{Differential responses to changes in growth temperature between trees from different functional groups and biomes: a review and synthesis of data}},
volume = {30},
year = {2010}
}
