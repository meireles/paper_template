file = {:Users/Meireles/Bibliography/PDFs/Couvreur et al. - 2008 - Molecular Phylogenetics and Evolution.pdf:pdf},
isbn = {1055-7903},
issn = {10557903},
journal = {Molecular Phylogenetics and Evolution},
keywords = {Annonaceae,Isolona,Magnoliids,Monodora,Morphological character evolution,Posterior mapping,Syncarpy},
number = {1},
pages = {302--318},
pmid = {18343689},
title = {{Evolution of syncarpy and other morphological characters in African Annonaceae: A posterior mapping approach}},
