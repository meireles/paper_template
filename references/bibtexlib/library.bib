journal = {Molecular Ecology},
keywords = {Diversification,Phylogenetic community structure,Phylogeography,Speciation,Tree balance},
number = {4},
pages = {572--592},
pmid = {19037898},
title = {{Emerging patterns in the comparative analysis of phylogenetic community structure}},
volume = {18},
year = {2009}
}
@article{Valiente-Banuet2013,
