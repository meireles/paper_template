journal = {Journal of Biogeography},
keywords = {AtpB,AtpB-rbcL spacer,Bayesian dating,Dispersal,Gondwana,Historical biogeography,Molecular dating,Proteaceae,Vicariance,rbcL},
number = {12},
pages = {2012--2027},
pmid = {19801324},
title = {{Molecular dating of the 'Gondwanan' plant family Proteaceae is only partially congruent with the timing of the break-up of Gondwana}},
