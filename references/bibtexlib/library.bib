keywords = {Band selection,Bayesian model averaging,Carbon,Carotenoid,Chlorophyll,Hyperspectral,Leaf pigment,MCMC,Model misspecification,Model selection,Model uncertainty,Nitrogen,Plant biochemistry},
pages = {102--119},
