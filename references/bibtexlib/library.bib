keywords = {Pleistocene,coalescent simulations,glacial cycles,phylogeography,refugia,speciation},
number = {17},
pages = {3727--3745},
pmid = {20723059},
title = {{Exploring the population genetic consequences of the colonization process with spatio-temporally explicit models: Insights from coupled ecological, demographic and genetic models in montane grasshoppers}},
volume = {19},
year = {2010}
}
@article{Shipley2006,
