isbn = {0016-7037},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
pages = {532--546},
publisher = {Elsevier Ltd},
title = {{Stable isotope records of hydrologic change and paleotemperature from smectite in Cenozoic western North America}},
