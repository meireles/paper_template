@article{Potter2014,
abstract = {The analysis of phylogenetic relationships among co-occurring tree$\backslash$nspecies offers insights into the ecological organization of forest$\backslash$ncommunities from an evolutionary perspective and, when employed$\backslash$nregionally across thousands of plots, can assist in forest health$\backslash$nassessment. Phylogenetic clustering of species, when species are more$\backslash$nclosely related than expected by chance, suggests a process of$\backslash$nevolutionary niche conservatism. Because such communities share much$\backslash$nevolutionary history and an affinity for similar environmental$\backslash$nconditions, they may be particularly susceptible to threats such as$\backslash$ninsects and diseases and shifting climate conditions. Meanwhile, a$\backslash$npattern of phylogenetic evenness, in which the species are less closely$\backslash$nrelated than by chance, may indicate competitive exclusion or$\backslash$ninterspecies facilitation. The ecological integrity of such communities$\backslash$nmay be less at risk because they may encompass a wider variety of$\backslash$nevolutionary adaptations. Using a network of more than 100,000 forest$\backslash$ninventory plots across the conterminous United States, we tested whether$\backslash$ncommunity phylogenetic structure was significantly clustered or even at$\backslash$nmultiple scales. Clustering predominated across most of the study area,$\backslash$nindicating the widespread significance of evolutionary niche$\backslash$nconservatism, except in areas of the west. Phylogenetic structure varied$\backslash$nalong environmental gradients, suggesting that clustering predominates$\backslash$nin more favorable locations and evenness predominates in areas with$\backslash$nharsher environments. These results have implications for broad-scale$\backslash$nforest health monitoring.},
