number = {1},
pages = {150--160},
pmid = {4182},
title = {{A phylogenetic analysis of Prunus and the Amygdaloideae (Rosaceae) using ITS sequences of nuclear ribosomal DNA}},
volume = {88},
year = {2001}
}
