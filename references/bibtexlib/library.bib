issn = {00129658},
journal = {Ecology},
keywords = {Climate change,Interaction network,Linear mixed models,Phenology,Phylogenetic signal,Plant-pollinator interactions},
number = {10},
pages = {2321--2333},
pmid = {24358717},
title = {{Phylogenetic trait-based analyses of ecological networks}},
