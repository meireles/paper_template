doi = {10.1093/treephys/tps026},
file = {:Users/Meireles/Bibliography/PDFs/Gea-Izquierdo et al.{\_}2012{\_}Tree Physiology.pdf:pdf},
isbn = {0829-318X},
issn = {0829318X},
journal = {Tree Physiology},
keywords = {Mediterranean,conductivity,dendroecology,global warming,tree-rings,vessels},
number = {4},
