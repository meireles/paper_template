journal = {Phil. Trans. R. Soc. B},
keywords = {Adaptation,Biodiversity,Biological,Biological: physiology,Climate,Ecosystem,Fossils,Geography,Geologic Sediments,Geologic Sediments: analysis,Plants,Plants: anatomy {\&} histology,Plants: genetics,South America,Trees},
