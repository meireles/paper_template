file = {:Users/Meireles/Bibliography/PDFs/Shen et al. - 2013 - Methods in Ecology and Evolution.pdf:pdf},
isbn = {2041-210X},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Community assembly rules,Phylobetadiversity,Phylogenetic mark correlation function,Point pattern analysis,Scale dependence,Spatial phylogenetic community pattern,Type I and II errors},
number = {12},
pages = {1132--1141},
title = {{Quantifying spatial phylogenetic structures of fully stem-mapped plant communities}},
