file = {:Users/Meireles/Bibliography/PDFs/Klikauer - 2016 - TripleC.pdf:pdf},
isbn = {9780691168319},
issn = {1726670X},
keywords = {Advertising,Capitalism,Cultural industry,Economics,Manipulation,Mass deception,Phishing,Phools},
