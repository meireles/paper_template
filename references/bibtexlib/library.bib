journal = {Journal of Biogeography},
keywords = {Amazon,Atlantic Forest,Caatinga,Cerrado,Evolutionary history of rain forest mammals,Neotropical small mammals,Phylogeography},
number = {1},
pages = {71--86},
title = {{The historical bridge between the Amazon and the Atlantic Forest of Brazil: A study of molecular phylogeography with small mammals}},
