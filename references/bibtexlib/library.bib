doi = {10.1073/pnas.1210196109},
file = {:Users/Meireles/Bibliography/PDFs/Knyazikhin et al.{\_}2012{\_}Proceedings of the National Academy of Sciences.pdf:pdf},
isbn = {1091-6490 (Electronic)$\backslash$n0027-8424 (Linking)},
issn = {0027-8424, 1091-6490},
journal = {Proceedings of the National Academy of Sciences},
pages = {201210196},
pmid = {23213258},
title = {{Hyperspectral remote sensing of foliar nitrogen content}},
url = {http://www.pnas.org/content/early/2012/12/03/1210196109$\backslash$nhttp://www.ncbi.nlm.nih.gov/pubmed/23213258$\backslash$nhttp://www.pnas.org/content/early/2012/12/03/1210196109.full.pdf},
