journal = {Evolution},
keywords = {Bayesian hierarchical model,Coalescent theory,Gene tree,Species tree},
number = {8},
pages = {2080--2091},
pmid = {18462214},
title = {{Estimating species trees using multiple-allele DNA sequence data}},
volume = {62},
year = {2008}
}
@article{Gavin2014a,
