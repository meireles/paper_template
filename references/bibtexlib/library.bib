journal = {Systematic Biology},
keywords = {Agamidae,Bayesian phylogenetics,Caprinae,Phylogeny,Posterior,Prior,Relaxed clock},
number = {2},
pages = {119--131},
pmid = {20525625},
title = {{Bayesian dating of shallow phylogenies with a relaxed clock}},
volume = {59},
year = {2010}
}
