issn = {00029122},
journal = {American Journal of Botany},
keywords = {26S rDNA,Cornales,Grubbiaceae,Hydrostachyaceae,Incongruence,Long-branch attraction,Phylogenetics,matK-rbcL},
number = {9},
pages = {1357--1372},
pmid = {21659236},
