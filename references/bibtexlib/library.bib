file = {:Users/Meireles/Bibliography/PDFs/Lavorel, Garnier - 2002 - Functional Ecology.pdf:pdf},
isbn = {0269-8463},
issn = {02698463},
journal = {Functional Ecology},
keywords = {Biogeochemical cycles,Disturbance,Effect traits,Fire,Resource gradient,Response traits,Scaling-up,Trade-offs},
number = {5},
