journal = {Canadian Journal of Botany},
keywords = {adaptations to burial,burial of seeds,impact on communities,plant vigour,sand accretion,zonation of vegetation},
number = {May},
pages = {713--738},
title = {{Adaptations of plants to burial in coastal sand dunes}},
volume = {76},
year = {1998}
