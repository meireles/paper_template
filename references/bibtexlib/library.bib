keywords = {genus piptadenia,leguminosae,logenetic study of the,matk sequence,mimosoideae,trnk,using plastid trnl-f and},
number = {3},
pages = {569--575},
title = {{Phylogenetic Study of the Genus {\textless}I{\textgreater}Piptadenia{\textless}/I{\textgreater} (Mimosoideae: Leguminosae) using Plastid {\textless}I{\textgreater}trnL-F{\textless}/I{\textgreater} and {\textless}I{\textgreater}trnK{\textless}/I{\textgreater}/{\textless}I{\textgreater}matK{\textless}/I{\textgreater} Sequence Data}},
