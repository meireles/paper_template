number = {6},
pages = {1451--1460},
pmid = {12755874},
title = {{Chloroplast DNA phylogeography reveals colonization history of a neotropical tree, Cedrela odorata L., in Mesoamerica}},
volume = {12},
year = {2003}
}
@article{Aradhya2007,
