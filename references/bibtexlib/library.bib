doi = {10.1214/06-BA102},
file = {:Users/Meireles/Bibliography/PDFs/Gelfand et al. - 2006 - Bayesian Analysis.pdf:pdf},
isbn = {1931-6690},
issn = {19360975},
journal = {Bayesian Analysis},
keywords = {Adaptive rejection method,Markov random field,Spatial logistic regression,Species range,Species richness},
