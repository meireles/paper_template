file = {:Users/Meireles/Bibliography/PDFs/Besnard et al. - 2009 - Annals of Botany.pdf:pdf},
isbn = {0305-7364},
issn = {03057364},
journal = {Annals of Botany},
keywords = {Internal transcribed spacer (ITS),Leaf peltate scales,Olive tree,Plastid DNA,Relaxed molecular clock,Systematics,Tertiary climatic shifts},
number = {1},
pages = {143--160},
pmid = {19465750},
title = {{Phylogenetics of Olea (Oleaceae) based on plastid and nuclear ribosomal DNA sequences: Tertiary climatic shifts and lineage differentiation times}},
