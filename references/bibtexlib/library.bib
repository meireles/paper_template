keywords = {dispersal,invasive species,molecular markers,range expansion,schinus terebinthifolius,spatial genetic},
number = {5},
pages = {284--293},
pmid = {17245420},
title = {{Colonization patterns of the invasive Brazilian peppertree, Schinus terebinthifolius, in Florida.}},
