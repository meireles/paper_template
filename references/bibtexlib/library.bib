keywords = {Bayes Theorem,Cluster Analysis,Computer Simulation,Evolution,Genetic,Genome,Genome: genetics,Likelihood Functions,Models,Molecular,Phylogeny,RNA,Ribosomal,Ribosomal: genetics},
number = {1527},
pages = {2197--2207},
pmid = {19571240},
title = {{The primary divisions of life: a phylogenomic approach employing composition-heterogeneous methods.}},
url = {http://rstb.royalsocietypublishing.org.virtual.anu.edu.au/content/364/1527/2197.short},
