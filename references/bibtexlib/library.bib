journal = {Annals of the New York Academy of Sciences},
keywords = {Bayesian methods,Climate,Forecasts,Forests,Global change,Models,Prediction},
pages = {221--236},
pmid = {19432650},
title = {{A predictive framework to understand forest responses to global change}},
volume = {1162},
