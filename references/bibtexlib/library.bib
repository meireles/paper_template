journal = {Ecological Monographs},
keywords = {Chaparral,Drought avoidance,Drought tolerance,Ecological strategy,Ecosystem,Fire ecology,Leaf habit,Leaf life span,Mediterranean-type,Photosynthesis,Specific leaf area,Water potential,Wood density},
number = {1},
pages = {25--44},
title = {{Functional strategies of chaparral shrubs in relation to seasonal water deficit and disturbance}},
