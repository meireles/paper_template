title = {{Linking Xylem Hydraulic Conductivity and Vulnerability to the Leaf Economics Spectrum—A Cross-Species Study of 39 Evergreen and Deciduous Broadleaved Subtropical Tree Species}},
url = {http://dx.plos.org/10.1371/journal.pone.0109211},
volume = {9},
