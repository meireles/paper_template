journal = {Molecular Phylogenetics and Evolution},
keywords = {Divergence dates,Historical biogeography,Penalty likelihood,Pinus,Relaxed molecular clocks,cpDNA},
number = {1},
pages = {166--182},
pmid = {16621612},
title = {{Phylogeny, historical biogeography, and patterns of diversification for Pinus (Pinaceae): Phylogenetic tests of fossil-based hypotheses}},
volume = {40},
year = {2006}
}
