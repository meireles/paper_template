journal = {Annals of Botany},
keywords = {Aechmea pectinata,Atlantic forest,Hummingbird-pollination,Inconspicuous flowers,Nectar production,Reproduction},
number = {5},
pages = {731--737},
pmid = {14573525},
title = {{Aechmea pectinata: A Hummingbird-dependent bromeliad with inconspicuous flowers from the rainforest in south-eastern Brazil}},
