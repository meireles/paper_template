file = {:Users/Meireles/Bibliography/PDFs/Larsson, Vajda, Dybkjr - 2010 - Review of Palaeobotany and Palynology.pdf:pdf},
isbn = {0034-6667},
issn = {00346667},
journal = {Review of Palaeobotany and Palynology},
keywords = {Denmark,Miocene,Oligocene,climate change,miospores,palaeobotany,palynoflora,pollen},
number = {3-4},
pages = {166--176},
title = {{Vegetation and climate in the latest Oligocene-earliest Miocene in Jylland, Denmark}},
