issn = {10557903},
journal = {Molecular Phylogenetics and Evolution},
keywords = {Approximate Bayesian computation (ABC),Coalescent theory,Comparative phylogeography,Ecological niche modeling (ENM),Statistical phylogeography},
number = {1},
pages = {291--301},
pmid = {19755165},
title = {{Phylogeography's past, present, and future: 10 years after Avise, 2000}},
